
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">

      <h1>All beds</h1>
      <div class="table-responsive">
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>Name</th>
              <th>Count</th>
              <th>Greenhouse</th>
              <th>Location</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @beds.each do |bed| %>
              <tr>
                <td><%= link_to bed.name, bed %></td>
                <td><%= bed.pots %></td>
                <td><%= bed.greenhouse.name %></td>
                <td><%= bed.location.name %></td>
                <td><%= link_to 'Edit', edit_bed_path(bed), class:"btn btn-info" %></td>
                <td><%= link_to 'Destroy', bed, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
        <br>

        <%= link_to 'New Bed', new_bed_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
