<div class="container-fluid">
<div class="row">
  <div class="col-xs-12">
<div class="col-lg-3">
  Search by plant:
  <%= select("plant", "plant_id",
              plant_array, {:include_blank => true},
              { :onchange => "window.location='/plants/'+this.value;" } ) %>
</div>
    <h1>All entries</h1>

    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Plant</th>
          <th>Pots</th>
          <th>Stick week</th>
          <th>Grade week</th>
          <th>Finish week</th>
          <th>Rating</th>
          <th>Bed</th>
          <th>Greenhouse</th>
          <th>Location</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @entries.each do |entry| %>
          <tr>
            <td><%= entry.plant.description %></td>
            <td><%= entry.pots %></td>
            <td><%= entry.stick_week %></td>
            <td><%= entry.grade_week %></td>
            <td><%= entry.finish_week %></td>
            <td><%= entry.rating %></td>
            <td><%= entry.bed.name %></td>
            <td><%= entry.greenhouse.name %></td>
            <td><%= entry.location.name %></td>
            <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
            <td><%= link_to 'Clear Bed', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Entry', new_entry_path %>
  </div>
</div>
</div>
